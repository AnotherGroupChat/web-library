{
  "name": "zotero-web-library",
  "version": "1.0.21",
  "description": "Web library from zotero.org",
  "main": "src/js/zotero-web-library.js",
  "files": [
    "src/js",
    "src/scss",
    "build"
  ],
  "type": "module",
  "browserslist": "firefox >= 68, chrome >=67, edge >= 15, safari >= 10, last 2 versions, not dead, not ie 11, not ie 10",
  "scripts": {
    "serve": "node scripts/server.cjs -p $npm_package_config_port -t $npm_package_config_translation_server",
    "prepack": "run-s clean build",
    "postpack": "rimraf build",
    "prebuild": "npm run clean -s && mkdir -p build/static/",
    "clean": "rimraf build",
    "build": "run-s \"build:prepare\" \"build:all\" \"build:postprocess\"",
    "build:all": "run-p 'build:js -s' 'build:scss -s' 'build:html -s' 'build:static -s'",
    "browserify": "mkdir -p build/static && NODE_ENV=production browserify -s ZoteroWebLibrary --extension=.jsx src/js/main.js -t [babelify] -g [ loose-envify --NODE_ENV production ] -g uglifyify | terser --compress --mangle > build/static/zotero-web-library.js",
    "build:js": "run-s browserify",
    "build:scss": "for f in src/scss/*.scss; do node-sass $f --output-style compressed --output build/static/; done;",
    "build:html": "mkdir -p build/ && rsync -vazL src/html/* build/",
    "build:styles-json": "node scripts/build-styles-json.cjs --stylesCacheTime $npm_package_config_styles_cache_time",
    "build:locale": "node scripts/fetch-locale.cjs --localeCacheTime $npm_package_config_locale_cache_time",
    "build:version": "node scripts/store-version.cjs",
    "build:static": "mkdir -p build/static && rsync -vazL src/static/* build/static/",
    "build:postprocess": "postcss build/static/zotero-web-library.css --use autoprefixer --no-map -r",
    "build:prepare": "run-p \"build:version\" \"build:locale\" \"build:styles-json\"",
    "devel": "run-p 'devel:js -s' 'devel:scss -s' 'devel:html -s' 'devel:static -s'",
    "devel:js": "NODE_ENV=development watchify -s ZoteroWebLibrary --extension=.jsx src/js/main.js -d -v -t [babelify] -g [ loose-envify --NODE_ENV development ] -p mapstraction -o build/static/zotero-web-library.js",
    "devel:scss": "nodemon -q -w src/scss --ext 'scss' --exec 'npm run devbuild:scss'",
    "devel:html": "nodemon -q -w src/html -w config --ext '.' --exec 'npm run build:html'",
    "devel:static": "nodemon -q -w src/static --ext '.' --exec 'npm run build:static'",
    "devbuild:scss": "run-s devbuild:scss:build devbuild:scss:post",
    "devbuild:scss:build": "for f in src/scss/*.scss; do node-sass $f --recursive --source-map true --source-map-contents true --output build/static; done;",
    "devbuild:scss:post": "postcss build/static/*.css --use autoprefixer -r",
    "start:all": "run-p \"serve -s {@}\" \"devel -s {@}\"",
    "start": "run-s \"build:prepare\" \"start:all\"",
    "stylelint": "stylelint src/scss/**/*.scss || true",
    "eslint": "eslint \"src/js/**/*.+(js|jsx)\" || true",
    "lint": "run-p stylelint eslint",
    "watch:stylelint": "nodemon -q -w src/scss --ext 'scss' --exec 'npm run stylelint'",
    "watch:eslint": "nodemon -q -w src/js --ext 'js,jsx' --exec 'npm run eslint'",
    "watch:lint": "run-p 'watch:stylelint -s' 'watch:eslint -s'",
    "test": "nyc mocha 'test/**/*.spec.+(js|jsx)'",
    "add-license": "node scripts/add-license.cjs"
  },
  "keywords": [
    "Zotero"
  ],
  "license": "AGPL-3.0",
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "dependencies": {
    "@tinymce/tinymce-react": "^3.10.3",
    "bootstrap-sass": "^3.4.1",
    "classnames": "^2.2.6",
    "combine-section-reducers": "^1.0.6",
    "connected-react-router": "^6.9.1",
    "copy-to-clipboard": "^3.3.1",
    "core-js": "^3.9.1",
    "deep-equal": "^2.0.5",
    "file-saver": "^2.0.5",
    "history": "<5.0.0",
    "memoize-one": "^5.1.1",
    "param-case": "^3.0.4",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-dnd": "^13.1.1",
    "react-dnd-html5-backend": "^12.1.1",
    "react-dnd-multi-backend": "^6.0.2",
    "react-dnd-touch-backend": "^12.0.0",
    "react-dom": "^17.0.1",
    "react-modal": "^3.12.1",
    "react-redux": "^7.2.2",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "react-transition-group": "^4.4.1",
    "react-virtualized-auto-sizer": "^1.0.5",
    "react-window": "^1.8.6",
    "react-window-infinite-loader": "^1.0.7",
    "reactstrap": "^8.9.0",
    "redux": "^4.0.5",
    "redux-async-queue": "^1.0.0",
    "redux-thunk": "^2.3.0",
    "regenerator-runtime": "^0.13.7",
    "tinymce": "5.7.0",
    "use-debounce": "^6.0.0",
    "webworkify": "^1.5.0",
    "zotero-api-client": "0.34.2",
    "zotero-base-mappings": "0.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.0",
    "@babel/core": "^7.13.8",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-proposal-decorators": "^7.13.5",
    "@babel/plugin-proposal-export-namespace-from": "^7.12.13",
    "@babel/plugin-proposal-function-sent": "^7.12.13",
    "@babel/plugin-proposal-json-strings": "^7.13.8",
    "@babel/plugin-proposal-numeric-separator": "^7.12.13",
    "@babel/plugin-proposal-object-rest-spread": "^7.13.8",
    "@babel/plugin-proposal-throw-expressions": "^7.12.13",
    "@babel/plugin-syntax-async-generators": "^7.8.4",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-syntax-import-meta": "^7.10.4",
    "@babel/plugin-transform-async-to-generator": "^7.13.0",
    "@babel/plugin-transform-runtime": "^7.13.9",
    "@babel/preset-env": "^7.13.9",
    "@babel/preset-react": "^7.12.13",
    "@welldone-software/why-did-you-render": "^6.1.0",
    "autoprefixer": "^10.2.5",
    "babel-eslint": "^10.1.0",
    "babel-plugin-add-module-exports": "^1.0.4",
    "babelify": "^10.0.0",
    "browserify": "^17.0.0",
    "chai": "^4.3.3",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "eslint": "^7.21.0",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "esm": "^3.2.25",
    "fetch-mock": "^9.11.0",
    "glob": "^7.1.6",
    "http-proxy": "^1.18.1",
    "loose-envify": "^1.4.0",
    "mapstraction": "^1.0.1",
    "merge-stream": "^2.0.0",
    "mocha": "^8.3.1",
    "node-fetch": "^2.6.1",
    "node-sass": "^5.0.0",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "postcss": "^8.2.7",
    "postcss-cli": "^8.3.1",
    "react-test-renderer": "^17.0.1",
    "redux-mock-store": "^1.5.4",
    "rimraf": "^3.0.2",
    "run-sequence": "^2.2.1",
    "serve-static": "^1.14.1",
    "sinon": "^9.2.4",
    "stylelint": "^13.12.0",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-config-standard": "^21.0.0",
    "stylelint-scss": "^3.19.0",
    "terser": "^5.6.0",
    "uglifyify": "^5.0.2",
    "watchify": "^4.0.0"
  }
}
