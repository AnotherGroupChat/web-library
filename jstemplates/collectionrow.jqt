<script id="collectionrowTemplate" type="text/x-jsrender">
    <li class="collection-row{{if (~currentCollectionKey == collectionKey)}} current-collection{{/if}}" data-collectionKey="{{attr:collectionKey}}">
        <div class="folder-toggle">
        <span class="sprite-placeholder sprite-icon-16 dui-icon left"></span>
        <span class="sprite-icon sprite-treesource-collection left"></span>
        </div>
        <a href="{{url:websiteCollectionLink}}" data-collectionKey="{{attr:collectionKey}}"
            id="collection-{{attr:collectionKey}}" class="collection-select-link{{if (~currentCollectionKey == collectionKey)}} current-collection{{/if}}">
            {{>title}}
        </a>
        {{if hasChildren}}
            <ul>
            {{for children}}
                {{for #data tmpl='#collectionrowTemplate' /}}
            {{/for}}
            </ul>
        {{/if}}
    </li>
</script>
